<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://unpkg.com/easyinvoice/dist/easyinvoice.min.js"></script>
    <style>
        body {
            background: #cccbcb;
        }

        .card {
            box-shadow: 0 20px 27px 0 rgba(0, 0, 0, 0.29);
            /* Adjusted box-shadow */
            position: relative;
            display: flex;
            flex-direction: column;
            min-width: 0;
            word-wrap: break-word;
            background-color: #fff;
            background-clip: border-box;
            border: 0 solid rgba(0, 0, 0, .125);
            border-radius: 1rem;
            padding: 1rem;
            border: none;
            /* Added padding for better appearance */
        }

        .text-reset {
            --bs-text-opacity: 1;
            color: inherit !important;
        }

        a {
            color: #5465ff;
            text-decoration: none;
        }
    </style>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
    <br>
    <br><br>
    <div class="container-fluid">

        <div class="container">
            <!-- Title -->
            <div class="d-flex justify-content-between align-items-center py-3">
                <h2 class="h5 mb-0"><a href="#" class="text-muted"></a>My Order {{id}}</h2>
            </div>

            <!-- Main content -->
            <div class="row">
                <div class="col-lg-8">
                    <!-- Details -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="mb-3 d-flex justify-content-between">
                                <div>
                                    <span class="me-3">{{date}}</span>

                                    <span class="btn bg-info">{{status}}</span>

                                    {{#if cancel}}
                                    <span style="text-align: center;color: red;">{{this.cancel}}</span>
                                    {{else}}
                                    {{#if deliver}}
                                    <span>
                                        <button
                                                style="background-color: rgb(197, 91, 53);"
                                                class="btn" onclick="confirmReturn('{{id}}')">Return</button>
                                    </span>
                                    {{else}}
                                    {{#if Return}}
                                    <span style="text-align: center;color: red;">{{this.Return}}</span>
                                    {{else}}
                                    <span>
                                        <button
                                                  onclick="confirmCancel('{{id}}')" style="background-color: rgb(197, 91, 53);"
                                                class="btn">Cancel</button>
                                        <p style="text-align: center;color: red;">{{this.message }}</p>
                                    </span>
                                    {{/if}}
                                    {{/if}}
                                    {{/if}}

                                </div>
                                <div class="d-flex">
                                    <button class="btn btn-link p-0 me-3 d-none d-lg-block btn-icon-text"><i
                                            class="bi bi-download"></i> <a href="/user-profile/invoice/{{id}}"><span class="text">Invoice</span></a></button>
                                    <div class="dropdown">
                                        <button class="btn btn-link p-0 text-muted" type="button"
                                            data-bs-toggle="dropdown">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li><a class="dropdown-item" href="#"><i class="bi bi-pencil"></i> Edit</a>
                                            </li>
                                            <li><a class="dropdown-item" href="#"><i class="bi bi-printer"></i>
                                                    Print</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <table class="table table-borderless">
                                <tbody>
                                    {{#each data}}
                                    {{#each this.products }}
                                    <tr>
                                        <td>
                                            <div class="d-flex mb-2">
                                                <div class="flex-shrink-0">
                                                    <img src="/images/{{this.product.productImage1}}" alt="" width="35"
                                                        class="img-fluid">
                                                </div>
                                                <div class="flex-lg-grow-1 ms-3">
                                                    <h3 class="small mb-0"><a href="#"
                                                            class="text-reset">{{this.product.product}}</a></h3>

                                                </div>
                                            </div>
                                        </td>
                                        <td></td>
                                        <td class="text-end">{{this.product.price}}</td>
                                    </tr>
                                    {{/each}}
                                    {{/each}}

                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="2">Subtotal</td>
                                        <td class="text-end">{{total}}</td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">Shipping</td>
                                        <td class="text-end">{{this.ship}}</td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">Discount</td>
                                        <td class="text-danger text-end">{{discount}}</td>
                                    </tr>
                                    {{#if categoryDiscount}}
                                    <tr>
                                        <td colspan="2">Category Discount</td>
                                        <td class="text-danger text-end">{{this.categoryDiscount}}</td>
                                    </tr>
                                    {{/if}}
                                    {{#if couponDiscount}}
                                    <tr>
                                        <td colspan="2">Coupon Discount</td>
                                        <td class="text-danger text-end">{{discount}}</td>
                                    </tr>
                                    {{/if}}
                                   
                                    <tr class="fw-bold">
                                        <td colspan="2">TOTAL</td>
                                        <td class="text-end">{{totalprice}}</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    <!-- Payment -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <h3 class="h6">Payment Method</h3>
                                    <p>{{payment}} <br>
                                        Total: {{totalprice}}<span class="badge bg-success rounded-pill">PAID</span></p>
                                </div>
                                <div class="col-lg-6">
                                    <h3 class="h6">Billing address</h3>
                                    <address>
                                        <strong>{{addressdata.fullname}}</strong><br>
                                        {{addressdata.address}}<br>
                                        {{addressdata.city}}, {{addressdata.state}}, {{addressdata.postalcode}}<br>
                                        <abbr title="Phone">Phone</abbr>{{addressdata.Phone}}
                                    </address>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <!-- Customer Notes -->
                    <div class="card mb-4">
                        <div class="card-body">
                            <h3 class="h6">Customer Notes</h3>
                            <p>Sed enim, faucibus litora velit vestibulum habitasse. Cras lobortis cum sem aliquet
                                mauris rutrum. Sollicitudin. Morbi, sem tellus vestibulum porttitor.</p>
                        </div>
                    </div>
                    <div class="card mb-4">
                        <!-- Shipping information -->
                        <div class="card-body">
                            <h3 class="h6">Shipping Information</h3>

                            <hr>
                            <h3 class="h6">Address</h3>
                            <address>


                                <strong>{{addressdata.fullname}}</strong><br>
                                {{addressdata.address}}<br>
                                {{addressdata.city}}, {{addressdata.state}}, {{addressdata.postalcode}}<br>
                                <abbr title="Phone">Phone</abbr>{{addressdata.Phone}}
                            </address>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

  
        <script>
  function confirmReturn(id) {
    Swal.fire({
        title: 'Are you sure?',
        text: "Once returned, the product will be removed from your order history!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, return it!'
    }).then((result) => {
        if (result.isConfirmed) {
            // Redirect to return page
            window.location.href = "/user-profile/order-return/" + id;
        }
    });
}


    function confirmCancel(id) {
    Swal.fire({
        title: 'Are you sure?',
        text: "This action cannot be undone!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, cancel it!'
    }).then((result) => {
        if (result.isConfirmed) {
            // Redirect to cancel page
            window.location.href = "/user-profile/order-cancel/" + id;
        }
    });
}
    </script>
